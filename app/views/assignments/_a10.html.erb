    <%= form_with model: assignment do |a_form|%>
      <div class="teton_question">
        <p class="question_label">Ruby Slippers</p>
        <div class="wild_question_text">
          <%= render "printq", q_code: "WIZ1", assignment: assignment %>
        </div>
      </div>
      <div class="teton_question">
        <p class="question_label">Haunted Forest Sign</p>
        <div class="wild_question_text">
          <%= render "printq", q_code: "WIZ2", assignment: assignment %>
        </div>
      </div>
      <div class="teton_question">
